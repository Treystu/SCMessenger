<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<!-- App Information -->
	<key>CFBundleName</key>
	<string>$(PRODUCT_NAME)</string>
	<key>CFBundleDisplayName</key>
	<string>SCMessenger</string>
	<key>CFBundleIdentifier</key>
	<string>$(PRODUCT_BUNDLE_IDENTIFIER)</string>
	<key>CFBundleVersion</key>
	<string>1</string>
	<key>CFBundleShortVersionString</key>
	<string>0.1.1</string>
	<key>CFBundlePackageType</key>
	<string>APPL</string>
	<key>CFBundleExecutable</key>
	<string>$(EXECUTABLE_NAME)</string>
	
	<!-- iOS Version -->
	<key>LSMinimumSystemVersion</key>
	<string>17.0</string>
	
	<!-- Background Modes -->
	<key>UIBackgroundModes</key>
	<array>
		<string>bluetooth-central</string>
		<string>bluetooth-peripheral</string>
		<string>fetch</string>
		<string>processing</string>
	</array>
	
	<!-- Background Task Identifiers -->
	<key>BGTaskSchedulerPermittedIdentifiers</key>
	<array>
		<string>com.scmessenger.mesh.refresh</string>
		<string>com.scmessenger.mesh.processing</string>
	</array>
	
	<!-- Motion (CMMotionActivityManager used in IosPlatformBridge for battery/relay auto-adjustment) -->
	<key>NSMotionUsageDescription</key>
	<string>SCMessenger uses motion data to optimize battery usage and network activity based on whether you are stationary or moving.</string>

	<!-- Bluetooth Permissions -->
	<key>NSBluetoothAlwaysUsageDescription</key>
	<string>SCMessenger uses Bluetooth to discover and communicate with nearby mesh nodes, even when the app is in the background.</string>
	<key>NSBluetoothPeripheralUsageDescription</key>
	<string>SCMessenger uses Bluetooth to advertise itself to nearby mesh nodes.</string>
	
	<!-- Local Network (Multipeer Connectivity) -->
	<key>NSLocalNetworkUsageDescription</key>
	<string>SCMessenger uses the local network to find nearby mesh nodes via WiFi Direct and establish peer-to-peer connections.</string>
	<key>NSBonjourServices</key>
	<array>
		<string>_scmesh._tcp</string>
		<string>_scmesh._udp</string>
	</array>
	
	<!-- Location (optional, for background keepalive) -->
	<key>NSLocationWhenInUseUsageDescription</key>
	<string>Location helps SCMessenger optimize mesh routing for nearby peers and improve connection reliability.</string>
	<key>NSLocationAlwaysAndWhenInUseUsageDescription</key>
	<string>Location helps SCMessenger maintain mesh connectivity in the background and optimize routing to nearby peers.</string>
	
	<!-- Camera (QR code scanning for contact exchange) -->
	<key>NSCameraUsageDescription</key>
	<string>SCMessenger uses the camera to scan QR codes for quickly adding contacts and joining mesh networks.</string>
	
	<!-- Notifications -->
	<key>NSUserNotificationsUsageDescription</key>
	<string>SCMessenger sends notifications when new messages arrive or when mesh events occur.</string>
	
	<!-- App Capabilities -->
	<key>UIRequiredDeviceCapabilities</key>
	<array>
		<string>arm64</string>
	</array>
	
	<!-- UI Configuration -->
	<key>UILaunchScreen</key>
	<dict>
		<key>UIColorName</key>
		<string>LaunchScreenBackground</string>
	</dict>
	
	<key>UISupportedInterfaceOrientations</key>
	<array>
		<string>UIInterfaceOrientationPortrait</string>
		<string>UIInterfaceOrientationLandscapeLeft</string>
		<string>UIInterfaceOrientationLandscapeRight</string>
	</array>
	
	<key>UISupportedInterfaceOrientations~ipad</key>
	<array>
		<string>UIInterfaceOrientationPortrait</string>
		<string>UIInterfaceOrientationPortraitUpsideDown</string>
		<string>UIInterfaceOrientationLandscapeLeft</string>
		<string>UIInterfaceOrientationLandscapeRight</string>
	</array>
	
	<!-- Disable CarPlay -->
	<key>UIApplicationSceneManifest</key>
	<dict>
		<key>UIApplicationSupportsMultipleScenes</key>
		<false/>
	</dict>
</dict>
</plist>
